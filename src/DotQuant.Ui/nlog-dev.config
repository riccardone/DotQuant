<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info" >

	
	<targets>
		<target xsi:type="ColoredConsole" name="coloredConsole" useDefaultRowHighlightingRules="false"
		        layout="NLOG|DotQuant.Ui|${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${callsite}|${message}" >
		  <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
		  <highlight-row condition="level == LogLevel.Info" foregroundColor="Green" />
		  <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
		  <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
		  <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>
	</targets>
	
	<rules>
		<logger name="Microsoft.*" minlevel="Warning" writeTo="coloredConsole" />
		<logger name="*" minlevel="Info" writeTo="coloredConsole" />
	</rules>
</nlog>

