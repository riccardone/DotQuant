@page "/auth-unauthorized"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;

<Topbar title="Unauthorized" />

<h4 class="fw-semibold mb-3 fs-18">Unauthorized</h4>

<p>You are not authorized to access this page. Please log in.</p>


@code {
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JsRuntime.InvokeVoidAsync("loadThemeConfig");
			await JsRuntime.InvokeVoidAsync("loadApps");
		}
	}
}